@using Newtonsoft.Json;

@{
    ViewData["Title"] = "CentroDeAyuda";
    Layout = "~/Views/Shared/_Layout.cshtml";
    NegocioModel a = JsonConvert.DeserializeObject<NegocioModel>(System.IO.File.ReadAllText("Data/Negocio.json"));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestionar Ubicaciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <style>
        input {
            width: 100px;
        }

        .lista {
            padding: 0;
        }

        .gestion {
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body style="background-color: rgb(207, 207, 207);">
    <div class="container-fluid" style="margin-top: 25px;padding: 5px ;margin-left:300px; width:80%">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2 ml-2">
                        <img src="~/Img/help.png" alt="Icono de ayuda" style="width:150px;height:150px;">
                    </div>
                    <div class="col">
                        <h3>¿Necesitas Ayuda?</h3>
                        <p>Si tienes problemas con nuestra plataforma o con la gestion que estas realizado envianos un correo</p>
                        <h4>@a.Correo</h4>
                    </div>
                    
                    <div class="col">
                        <h5>Linea de atencion</h5>
                        <label>Telefono: @a.Telefono</label><br>
                        <label>Celular: @a.Celular</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


