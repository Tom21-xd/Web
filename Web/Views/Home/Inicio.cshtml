@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/Home/Inicio.css">
    <link rel="shortcut icon" href="~/Img/uniamazonia.png" type="image/x-icon">

</head>

<body>
        <div class="info">
            <h1>¡Bienvenido(a) @User.Identity.Name!</h1>
            <p>Aqui podras gestionar y hacer seguimiento a las reservas que realices </p>
        </div>
        <div class="grilla">
            <div class="Hreservas">
                <div class="hori">
                    <div>
                        <img src="~/Img/Reserva.png" alt="Icono de un calendario">
                    </div>
                    <div class="text">
                        <h2>Realizar una reserva</h2>
                        <p>solicita una reserva de nuestros servicios</p>
                    </div>
                </div>
                <button class="btn">
                    Inicia aqui
                </button>
            </div>
            <div class="Vreservas">
                <div class="hori">
                    <div>
                        <img src="/Img/Reserva.png" alt="Icono de un calendario">
                    </div>
                    <div class="text">
                        <h2>Mis reservas</h2>
                        <p>Revisa el historial de reservas hechas en nuestra pagina con sus detalles</p>
                    </div>
                </div>
                <button class="btn">
                    Consulta Aqui
                </button>
            </div>
        </div>

</body>

</html>