@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .lista {
            padding: 0;
        }

        .gestion {
            margin: 0;
            padding: 0;
        }
    </style>

</head>

<body style="background-color: rgb(207, 207, 207); ">
    <div class="container" style="margin-top: 25px;padding: 5px ;margin-left:300px; width:80%">
        <h1 class="ml-3 mb-5"style="color:#255000;">Gestionar Usuario</h1>
        <table id="tablax" class="table-bordered align-middle border-success mt-3">
            <thead >
                <th style="height:35px;" class="text-center">Id</th>
                <th class="text-center">Nombre de usuario</th>
                <th class="text-center">Correo</th>
                <th class="text-center">Telefonos</th>
                <th class="text-center">Rol</th>
                <th class="text-center">Acciones</th>
            </thead>
            <tbody>
                @foreach (UsuarioModel usua in ViewBag.usuarios)
                {
                    <tr>
                        <td class="text-center" >@usua.persona.Id</td>
                        <td class="text-center" >@usua.Nombre</td>
                        <td class="text-center" >@usua.Correo</td>
                        <td class="text-center" >@usua.persona.Telefono</td>
                        <td class="text-center" >@usua.rol.Nombre</td>
                        <td class="text-center">
                            <button type="button" id="" class="btn btn-primary mt-3 mb-3" id="edit" data-bs-toggle="modal" data-bs-target="#EditarRol" value="">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-between align-items-center ">
            <button class="btn btn-primary btn-generar-pdf">Descargar</button>
            
        </div>
    </div>
    



