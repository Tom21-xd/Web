@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            border: 2px solid black;
            background-color: rgba(207, 207, 207, 0.828);
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }

        .form-control, .btn-online-secundary {
            border: 2px solid black;
            background-color: rgba(207, 207, 207, 0.828);
            padding: 8px;
            color: black;
        }
    </style>
</head>

<body style="background-color: rgb(207, 207, 207); place-items:center;">
    <div class="container mt-5" style="margin-left: 270px; margin-top: 100px;">
        <div>
            <h2 class="text-center">Gestión de Usuarios</h2>
        </div>

        <div class="input-group mb-3" style="margin-top: 90px;">
            <input type="text" class="form-control" placeholder="Buscar número de identificación" aria-label="Buscar número de identificación" aria-describedby="btnBuscar">
            <button class="btn btn-online-secundary" type="button" id="btnBuscar">Buscar</button>
        </div>

        <div class="table-responsive">
            <table id="table1">
                <thead>
                    <tr>
                        <th scope="col">Identificación</th>
                        <th scope="col">Nombres</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Editar</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>123456789</td>
                        <td>John</td>
                        <td>john.doe@example.com</td>
                        <td>Administrador</td>
                        <td><a href="#" class="btn btn-primary btn-sm">Editar</a></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-3">
            <button class="btn btn-secondary" id="btnPagAnterior">&lt;</button>
            <span id="pagActual"> 1 </span>
            <button class="btn btn-secondary" id="btnPagSiguiente">&gt;</button>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <button class="btn btn-primary btn-generar-pdf">Descargar</button>
            <a href="ruta_para_crear_usuario" class="btn btn-success mb-3">Crear Usuario</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-r4LJuRkuBfkp3HVsMh8kMrL8CC/9Sj68Sebd2g2ME5O4MgZM01FK5k/27gmOhOfxf" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-c7lW5+X6jCFfHe5P5FpUcc5C2j1/UdhDQDizPoi4MI9LMkoN+2Fwbu3aoHt8Uq6l" crossorigin="anonymous"></script>

    <script>

        $(document).ready(function () {
            var tabla = $('#mtable1');
            var numFilas = 10;
            var filas = tabla.find('tbody tr');
            var paginas = Math.ceil(filas.length / numFilas);

            var pagActual = 1;
            actualizarFilas();

            $('#btnPagAnterior').prop('disabled', true);

            $('#btnPagSiguiente').on('click', function () {
                if (pagActual < paginas) {
                    pagActual++;
                    actualizarFilas();
                    $('#btnPagAnterior').prop('disabled', false);
                    if (pagActual === paginas) {
                        $(this).prop('disabled', true);
                    }
                }
            });

            $('#btnPagAnterior').on('click', function () {
                if (pagActual > 1) {
                    pagActual--;
                    actualizarFilas();
                    $('#btnPagSiguiente').prop('disabled', false);
                    if (pagActual === 1) {
                        $(this).prop('disabled', true);
                    }
                }
            });

            function actualizarFilas() {
                var inicio = (pagActual - 1) * numFilas;
                var fin = inicio + numFilas;
                tabla.find('tbody tr').hide();
                tabla.find('tbody tr').slice(inicio, fin).show();
                $('#pagActual').text(pagActual);
            }
        });
    </script>
</body>
</html>