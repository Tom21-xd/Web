        if (User.IsInRole("gestionar usuarios"))
        {
            <li>
                <a href="@Url.Action("Index","Usuario")">Usuarios</a>
            </li>
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestionar Ubicaciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <style>
        input {
            width: 100px;
        }

        .lista {
            padding: 0;
        }

        .gestion {
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body style="background-color: rgb(207, 207, 207);">
    <div class="container-fluid" style="margin-top: 25px;padding: 5px ;margin-left:300px; width:80%">
        <h1 class="mt-4" style="color:#255000;">Gestionar Negocio</h1>
        <div class="m-5">
            <form action="@Url.Action("GuardarDatos","Negocio")" method="post">
                <div class="row mb-3">
                    <label class="text-black align-items-center mb-2">Nombre</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="" name="nombre" value="@ViewBag.neg.Nombre">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="text-black align-items-center mb-2">Telefono</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="" name="telefono" value="@ViewBag.neg.Telefono">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="text-black align-items-center mb-2">Celular</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="" name="celular" value="@ViewBag.neg.Celular">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="text-black align-items-center mb-2">Correo</label>
                    <div class="col-sm-5">
                        <input type="email" class="form-control" id="" name="correo" value="@ViewBag.neg.Correo">
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="text-black align-items-center mb-2">Direccion</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="" name="direccion" value="@ViewBag.neg.Direccion">
                    </div>
                </div>

                <button class="btn btn-success"type="submit">Guardar</button>
            </form>
        </div>
        
    </div>
</body>
</html>

