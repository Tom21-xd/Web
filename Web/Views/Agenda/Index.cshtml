@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body style="background-color: rgb(207, 207, 207); ">
    <div class="container" style="margin-top: 25px;padding: 5px; margin-left: 300px; width: 70%">
        <h1 class="ml-3 mb-5" style="color:#255000;">Gestionar Usuario</h1>

        <div>
            <label for="Empleado" class="form-label">Empleado</label>
        </div>

        <div class="input-group mb-3" style="width: 50%">
            <input type="text" class="form-control" list="lista" id="buscador" aria-label="Escribe algo" placeholder="Type to search...">
            <datalist id="lista">
            </datalist>
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="button-addon2" data-toggle="dropdown" aria-expanded="false">Acciones</button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Opción 1</a></li>
                <li><a class="dropdown-item" href="#">Opción 2</a></li>
                <li><a class="dropdown-item" href="#">Opción 3</a></li>
            </ul>
        </div>

        <div>
            <button class="btn btn-primary " type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#programarAgenda">
                Programar Agenda
            </button>
        </div>
    </div>

    <div class="modal fade" tabindex="-1" id="programarAgenda" aria-labelledby="programarAgendaModal">
        <div class="modal-dialog modal-dialog-center">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="programarAgenda">Programar Agenda</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div>
                        <div class="row mt-3">
                            <div class="col">
                                <label class="form-label">Fecha Inicio</label>
                                <input class="form-control" type="date" required name="fechaInicio">
                            </div>

                            <div class="col">
                                <label class="form-label">Fecha Fin</label>
                                <input class="form-control" type="date" required name="fechaFin">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col">
                                <label class="form-label">Hora Inicio</label>
                                <input class="form-control" type="time" required name="horaInicio">
                            </div>

                            <div class="col">
                                <label class="form-label">Hora Fin</label>
                                <input class="form-control" type="time" required name="horaFin">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col">
                                <label class="form-label">Duracion</label>
                                <input class="form-control" type="time" required name="duracion">
                            </div>

                            <div class="col">
                                <label class="form-label">Trabajar festivos</label>
                                <select class="form-select form-select-sm" aria-label="festivo">
                                    <option selected>Si</option>
                                    <option value="1">No</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col text-center">
                            <label class="form-label">L</label>
                            <input class="form-check-input" type="checkbox" value="" id="L">
                        </div>
                        <div class="col text-center">
                            <label class="form-label">M</label>
                            <input class="form-check-input" type="checkbox" value="" id="M">
                        </div>
                        <div class="col text-center">
                            <label class="form-label">M</label>
                            <input class="form-check-input" type="checkbox" value="" id="X">
                        </div>
                        <div class="col text-center">
                            <label class="form-label">J</label>
                            <input class="form-check-input" type="checkbox" value="" id="J">
                        </div>
                        <div class="col text-center">
                            <label class="form-label">V</label>
                            <input class="form-check-input" type="checkbox" value="" id="V">
                        </div>
                        <div class="col text-center">
                            <label class="form-label">S</label>
                            <input class="form-check-input" type="checkbox" value="" id="S">
                        </div>
                        <div class="col text-center">
                            <label class="form-label">D</label>
                            <input class="form-check-input" type="checkbox" value="" id="D">
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>

</html>